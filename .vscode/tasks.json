{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Docker Image",
            "type": "shell",
            "command": "sudo docker build -t manim-cs-server .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
			
        },
		{
            "label": "Run local server",
            "type": "shell",
            "command": "docker run --rm -it -p 80:80 --name manim-cs-server -server manim-cs-server",
            "group": {
                "kind": "build",
                "isDefault": false
            }
			
        },
        {
            "label": "build and push image",
            "type": "shell",
            "command": "sudo ${workspaceFolder}/.vscode/scripts/build_push_image.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
